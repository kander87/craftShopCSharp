@{
    ViewData["Title"] = "New Craft";
}
@model Craft

    <div class="main">
            @await Html.PartialAsync("_Nav")
<br><br>
        <form  asp-controller="Craft" asp-action="CraftCreate" class="p-3 mx-auto w-50 shadow bg-white rounded text-center" method="post" >       
            <h1 class="display-5 mx-auto title">Sell a Craft</h1>
            <div class="form-group d-flex justify-content-between">
                <div class="form-group row  p-2">
                    <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
                        <div class="p-2">
                            <input type="url" asp-for="Image" class="form-control" placeholder="Web png/jpg URLs only please">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
                        <div class="">
                            <input  asp-for="Price" class="form-control" placeholder="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                </div>
            </div>

            <div class="form-group d-flex justify-content-between">

                <div class="form-group row p-2">
                    <label asp-for="Title" class="col-sm-2 col-form-label">Title:</label>
                        <div class="p-2 " >
                            <input asp-for="Title" class="form-control col-md-12" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                </div>

                <div class="form-group row  p-2">
                    <label asp-for="Quantity" class="col-sm-8 col-form-label">Quantity Available:</label>
                        <div class="p-2">
                            <input type="number" asp-for="Quantity" class="form-control" placeholder="Quantity">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                </div>
                </div>
                <div class="form-group row  p-2">
                    <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
                        <div class=" mx-auto">
                            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                </div>

                <div class="text-center">
                    <button class="btn register m-2" type="submit" class="unRSVP m-4">Create</button>
                </div>
            </form>
            <div class="vl"></div>
    </div>